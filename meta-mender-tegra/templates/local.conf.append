MACHINE ?= "jetson-tx2"

# Tegra specific mender setup variables
INHERIT += "tegra-mender-setup"

# By default, grow the data partition on boot to maximum size available
MENDER_DATA_PART_FSTAB_OPTS = "${MENDER_DATA_PART_FSTAB_OPTS_DEFAULT},x-systemd.growfs"
# Not required for mender support, but gives you access via SSH by default
EXTRA_IMAGE_FEATURES += " ssh-server-dropbear"
